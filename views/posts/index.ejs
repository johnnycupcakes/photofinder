      </ul>

    </div>

  </nav>
    <form id="content">
      <% for (var i = 0; i < images.length; i++) { %>
          <li>
          <a href="/posts/<%=images[i].user_id %>">
          <%= images[i].title %></li>
      <% } %>
      </ul>
      <div>
      <a href="/posts/new">Add Post</a>
      </div>
    </form>
<!-- jQuery !-->
<script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>

